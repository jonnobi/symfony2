{% extends "LvShopBundle::layout.html.twig" %}

{% block content %}
<h2>Shop creation</h2>

{% if formErrors %}<p><code>入力内容に不備があります</code></p>{% endif %}

<form action="{{ path('lv_shop_inputpost') }}" method="post" {{ form_enctype(form) }} novalidate>
    {{ form_widget(form) }}
    <p>
        <button type="submit">登録</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('lv_shop_list') }}">
            一覧に戻る
        </a>
    </li>
</ul>
{% endblock %}
