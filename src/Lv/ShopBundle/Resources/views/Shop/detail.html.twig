{% extends "LvPlatformBundle::layout.html.twig" %}
{% block content %}
<div class="row">
<div class="span12">
<h2>店舗詳細</h2>

  <table class="table table-striped container">
    <tbody>
        <tr>
            <th class="span3">店舗ID</th>
            <td>{{ shop.id }}</td>
        </tr>
        <tr>
            <th>業態</th>
            <td>{{ shop.business }}</td>
        </tr>
        <tr>
            <th>店舗名</th>
            <td>{{ shop.companyName }}</td>
        </tr>
        <tr>
            <th>住所</th>
            <td>{{ shop.prefecture }}{{ shop.address}}</td>
        </tr>
        <tr>
            <th>ビル名</th>
            <td>{{ shop.buildingName }}</td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td>{{ shop.tel }}</td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td>{{ shop.mail }}</td>
        </tr>
        <tr>
            <th>作成日</th>
            <td>{{ shop.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>最終更新日</th>
            <td>{{ shop.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
  </table>

  <ul class="record_actions">
    <li>
      {% set page = app.session.get('page') %}
      <a href="{{ path('lv_shop_list', {'page': page}) }}">店舗一覧に戻る</a>
    </li>
    <li>
      <a href="{{ path('lv_shop_edit', {'shop_id': shop.id}) }}">編集</a>
    </li>
  {#
    <li>
      <form action="{{ path('ens_job_delete', { 'shop_id': shop.shop_id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button>
      </form>
    </li>
  #}
  </ul>


</div><!--/row-->
</div><!--/span-->
{% endblock %}
